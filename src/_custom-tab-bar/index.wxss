.tab-bar {
  width: 100%;
  height: 110rpx;
  display: flex;
  background-color: white;
  box-shadow: 0px -3px 6px rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  width: 0px;
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-bar-item .icon {
  width: 50rpx;
  height: 50rpx;
}

.tab-bar-item .text {
  font-size: 18rpx;
  margin-top: 9rpx;
  color: #666;
}

.tab-bar-item .text-selected {
  color: #047ba5;
}
