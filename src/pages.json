      {
        "pagePath": "pages/plan/index",
        "text": "违章记录",
        "iconPath": "static/images/tabBar/violation.png",
        "selectedIconPath": "static/images/tabBar/violation-hl.png"
      },
      {
        "pagePath": "pages/plan/index",
        "text": "异常申报",
        "iconPath": "static/images/tabBar/report.png",
        "selectedIconPath": "static/images/tabBar/report-hl.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
